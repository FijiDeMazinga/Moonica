<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">#0060AA</item>
        <item name="colorControlActivated">#0060AA</item>
        <item name="colorControlHighlight">#0060AA</item>
        <item name="android:textColorHint">#F03D43</item>

    </style>
    <style name="MyButtonStyle" parent="@android:style/Widget.Button">
        <item name="android:textColor">#ffffff</item>
        <item name="android:background">#0060AA</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

</resources>
