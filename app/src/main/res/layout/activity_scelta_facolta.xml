<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controller.SceltaFacolta">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingLeft="30dp"
            android:paddingRight="30dp">

            <Space
                android:layout_width="match_parent"
                android:layout_height="50dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Registrazione"
                    android:textColor="#225599"
                    android:textSize="25dp" />

                <Space
                    android:layout_width="100dp"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:maxWidth="75dp"
                    android:maxHeight="75dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/logo" />
            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="50dp" />

            <Spinner
                android:id="@+id/facolta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:prompt="@string/facoltaPrompt" />
            <TextView
                android:id="@+id/invisibleErrorF"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_alignRight="@+id/facolta"
                android:layout_alignBottom="@+id/facolta"
                android:layout_marginTop="0dp"
                android:paddingTop="0dp"
                android:paddingRight="50dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                />

            <Space
                android:layout_width="match_parent"
                android:layout_height="30dp" />

            <Spinner
                android:id="@+id/corso"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:prompt="@string/corsoPrompt" />
            <TextView
                android:id="@+id/invisibleErrorC"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_alignRight="@+id/corso"
                android:layout_alignBottom="@+id/corso"
                android:layout_marginTop="0dp"
                android:paddingTop="0dp"
                android:paddingRight="50dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                />

            <Space
                android:layout_width="match_parent"
                android:layout_height="36dp" />

            <Button
                android:id="@+id/sceltafacolta"
                style="@style/MyButtonStyle"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="REGISTRAZIONE" />

        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>