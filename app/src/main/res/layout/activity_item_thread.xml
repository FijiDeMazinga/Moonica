<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardView_thread"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary">

        <RelativeLayout
            android:id="@+id/userDetail"
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:gravity="center"
            android:paddingHorizontal="10dp">

            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/avatarUser_thread"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:civ_border_color="#FFFFFF"
                app:civ_border_width="1dp" />

            <TextView
                android:id="@+id/nomeAutoreCommento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/avatarUser_thread"
                android:layout_centerHorizontal="true"
                android:layout_marginVertical="3dp"
                android:textColor="#FFFFFF"
                android:textSize="12dp" />
            <!--android:layout_alignParentBottom="true"/>-->
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/userDetail"
            android:background="#FFFFFF">

            <TextView
                android:id="@+id/testoRisposta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp" />

            <TextView
                android:id="@+id/dataRisposta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/testoRisposta"
                android:layout_alignParentRight="true"
                android:padding="10dp"
                android:textSize="12dp" />
        </RelativeLayout>

    </RelativeLayout>
</android.support.v7.widget.CardView>