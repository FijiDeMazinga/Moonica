<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardView_thread"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp">

    <RelativeLayout
        android:id="@+id/threadReply"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary">

        <RelativeLayout
            android:id="@+id/userDetail_thread"
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:paddingVertical="5dp"
            android:gravity="center"
            android:paddingHorizontal="10dp">

            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/avatarUser_thread"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:civ_border_color="#FFFFFF"
                app:civ_border_width="1dp" />

            <TextView
                android:id="@+id/nomeAutoreCommento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/avatarUser_thread"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:layout_marginVertical="3dp"
                android:textColor="#FFFFFF"
                android:textSize="12dp" />
            <!--android:layout_alignParentBottom="true"/>-->
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/textDetail_thread"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/userDetail_thread"
            android:background="#FFFFFF"
            >
<!--

            android:paddingVertical="18dp"
-->

            <TextView
                android:id="@+id/testoRisposta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="10dp"
                android:paddingTop="15dp"

                />

            <Space
                android:id="@+id/spaceCommento"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_below="@id/testoRisposta"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/allegatiCommenti"
                android:layout_below="@id/spaceCommento"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="5dp"
                android:orientation="vertical"
                android:visibility="gone">

            </LinearLayout>

            <TextView
                android:id="@+id/dataRisposta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/allegatiCommenti"
                android:layout_alignParentRight="true"
                android:paddingRight="10dp"
                android:paddingBottom="15dp"
                android:layout_marginTop="15dp"
                android:textSize="12dp" />
        </RelativeLayout>

    </RelativeLayout>
</android.support.v7.widget.CardView>